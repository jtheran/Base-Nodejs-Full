# ==========================================
# CONFIGURACIÓN BASE DE LA APLICACIÓN
# ==========================================

# Entorno de ejecución
NODE_ENV=development
PORT=8125
API_VERSION=v1
API_PREFIX=/api

# ==========================================
# DATA ADMIN DE PLATAFORMA
# ==========================================

EMAIL_ADMIN="email_Admin"
PASS_ADMIN="tu_clave"
NAME_ADMIN="admin-nodejs"

# ==========================================
# BASE DE DATOS - PRISMA
# ==========================================

# PostgreSQL (Recomendado para producción)
#DATABASE_URL="postgresql://username:password@localhost:5432/backend_base?schema=public"

# MySQL (Alternativa)
# DATABASE_URL="mysql://username:password@localhost:3306/backend_base"

# SQLite (Solo desarrollo)
DATABASE_URL="file:./dev.db"

# ==========================================
# AUTENTICACIÓN & JWT
# ==========================================

JWT_SECRET="tu_secret"
JWT_EXPIRES_IN=30m
JWT_REFRESH_SECRET="tu_secret"
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# REDIS - CACHE & COLAS
# ==========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_DB=cacheDB

# ==========================================
# EMAIL - NODEMAILER
# ==========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password_gmail

# Email defaults
EMAIL_FROM_NAME=Backend Base
EMAIL_FROM=no-reply@tuempresa.com

# ==========================================
# SEGURIDAD AVANZADA
# ==========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Helmet Security
CONTENT_SECURITY_POLICY=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# ==========================================
# LOGGING & MONITORING
# ==========================================

LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=14d

# Monitoring
MONITORING_ENABLED=true
MONITORING_USER=admin
MONITORING_PASSWORD=monitor_password

# ==========================================
# UPLOAD & FILES
# ==========================================

UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=./src/uploads

# ==========================================
# FEATURE TOGGLES
# ==========================================

FEATURE_AUDIT_ENABLED=true
FEATURE_CACHE_ENABLED=true
FEATURE_QUEUE_ENABLED=true
FEATURE_EMAIL_ENABLED=true
FEATURE_WEBSOCKET_ENABLED=true